    <link href="../../dist/CreatePost/css/index.css" rel="stylesheet">
    <script src="../../dist/CreatePost/js/bootstrap-wysiwyg.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
