        transition: .5s;
        border-radius: 25px;
        display: table;
        table-layout: fixed;
        background-color: #00B2A9;
        border-style: solid;
        border-color: black;
        border-width: 0px;
        width: 100%;
        height: 30px;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        text-decoration: none;
    }

    .commentUser {
        margin-top:10px;
        display: inline;
    }

    .invisibleinput {
        display: none;
        visibility: hidden;

    }

    .comments:active {
        color: white;
    }

    .unselectable {
        -webkit-touch-callout: none;
        -webkit-user-select: none;
        -khtml-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
